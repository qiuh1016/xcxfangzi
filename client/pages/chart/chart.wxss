/* pages/chart/chart.wxss */

.section {
   margin-left:10rpx;
   margin-right:10rpx;
   margin-top: 10rpx;
}

.canvas {
  width: 100%;
  height: 200px;
}

.table {
  border: 2px solid darkgray;
  width: 90%;
  margin-top: 1rem;
  margin-right: 1rem;
  margin-left: 1rem;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.td {
  width: 20%;
  justify-content: center;
  display: flex;
  text-align: center;
  /* border-right: 2px solid #ddd; */
  height: 100%;
}

.td-1 {
  width: 19%;
  justify-content: center;
  display: flex;
  text-align: center;
  /* border-right: 2px solid #ddd; */
  height: 100%;
  font-size: 16px;
  vertical-align: middle;
}

.td-2 {
  width: 80%;
  justify-content: center;
  /* border-right: 2px solid #ddd; */
  text-align: center;
  height: 100%;
  max-width: 100%;
  padding: 40rpx 0;
  font-size: 16px;
  vertical-align: middle;
}

.bg-w {
  background: #73AFEF;
}

.bg-g {
  background: #e6f3f9;
}

.bg-g2 {
  background: #fff;
}

.th {
  width: 19%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
  /* border-right: 2px solid #ddd; */
}

.th-2 {
  width: 80%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
  max-height: 2rem;
  max-width: 80%;
}

.th-test {
  width: 80%;
  justify-content: center;
  color: #000;
  display: block;
  height: 2rem;
  align-items: center;
  max-height: 2rem;
  max-width: 80%;
}
