.userImg {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border-color: #F58F8A;
  border-width: 1rpx;
  box-shadow: 0rpx 0rpx 30rpx #C4332F;
}

