.my-header-wrap {
  display: block;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}

.my-header {
  height: 240rpx;
  border-radius: 12rpx;
  background-image: linear-gradient(90deg, rgb(235, 60, 60), rgb(255, 116, 89));
  box-shadow: 0 4rpx 10rpx rgba(255,98,98,.4);
  overflow: hidden;
}

.my-header-main {
  display: flex;
  position: relative;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.my_header_msg {
  display: block;
  flex: 1;
}

.my-header-plus {
  height: 116rpx;
  width: 160rpx;
  position: absolute;
  right: -10rpx;
  bottom: -50rpx;
  transform: rotate(11deg);
