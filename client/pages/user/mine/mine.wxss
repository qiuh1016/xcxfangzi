.dot {
  top: 16rpx;
  left: 50%;
  margin-left: 10rpx;
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #fff;
  text-align: center;
  font-size: 16rpx;
  color: #fff;
  background-color: #e4393c;
}

.dot.dot_num {
  box-sizing: border-box;
  width: auto;
  min-width: 28rpx;
  padding: 2rpx 8rpx;
  height: 28rpx;
  border-radius: 28rpx;
}

.my-assets {
  display: flex;
}

.my-assets-cell {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  padding: 32rpx 0 22rpx;
  text-align: center;
}

.my-assets .my-assets-cell .my_assets_cell_detail {
  display: block;
  margin-bottom: 16rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #e4393c;
}

.my-assets .my-assets-cell .my_assets_cell_title {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.my-assets .my_assets_cell_detail_number {
  font-size: 32rpx;
}

.my-link {
  display: flex;
}

.my-link-cell {
  flex: 1;
  text-align: center;
  padding: 32rpx 0 22rpx;
}

.my-link .my-link-cell .my-link-cell-title {
  color: #666;
  font-size: 24rpx;
}

.my-link .my-link-cell .my-link-cell-number {
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  margin: 0 auto 6rpx;
}
