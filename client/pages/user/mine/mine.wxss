/* pages/user/mine/mine.wxss */

.my-header-wrap {
  display: block;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}

.my-header {
  height: 240rpx;
  border-radius: 12rpx;
  background-image: linear-gradient(90deg, rgb(235, 60, 60), rgb(255, 116, 89));
  box-shadow: 0 4rpx 10rpx rgba(255, 98, 98, 0.4);
  overflow: hidden;
}

.my-header-main {
  display: flex;
  position: relative;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.my_header_msg {
  display: block;
  flex: 1;
}

.my-header-plus {
  height: 116rpx;
  width: 160rpx;
  position: absolute;
  right: -10rpx;
  bottom: -58rpx;
  transform: rotate(11deg);
  border-top-left-radius: 8rpx;
  background: #333 url(data:image/png;base64,) no-repeat 16rpx 8rpx;
  background-size: 100rpx;
  box-shadow: -1px -1px 6px #c6934d;
}

.my-header-plus-btn {
  display: inline;
  position: relative;
  top: 18rpx;
  left: 10rpx;
  color: #cead68;
  font-size: 18rpx;
  border-radius: 16rpx;
  padding: 0rpx 16rpx 0 10rpx;
  background-color: hsla(0, 0%, 85%, 0.1);
}

.userImg {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border-color: #f58f8a;
  border-width: 1rpx;
  box-shadow: 0rpx 0rpx 30rpx #c4332f;
}

.userName {
  position: absolute;
  left: 180rpx;
  top: 50rpx;
  color: #fff;
  font-weight: 300;
  font-size: medium;
}

.userId {
  position: absolute;
  left: 180rpx;
  top: 100rpx;
  color: #fff;
  font-weight: 300;
  font-size: small;
  opacity: 0.8;
}

.account-manager {
  position: absolute;
  right: 60rpx;
  top: 40rpx;
  font-size: small;
  /* opacity: 0.6; */
}

.account-manager label {
  color: #86231c;
}

.my-section {
  position: relative;
  margin: 30rpx 0;
  background: #fff;
}

.my-order {
  display: flex;
}

.my-order-cell {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 84rpx 0 24rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  background: no-repeat center 32rpx;
  background-size: 40rpx;
}

